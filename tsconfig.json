{
    "compilerOptions": {
        "module": "none",
        "noImplicitAny": false,
        "removeComments": true,
        "outFile": "./dist/index.js",
        "types": [
            "./typings"
        ],
        "sourceMap": false,
        "declaration": true
    },
    "include": [
		"src/**/*",
		"typings/**/*"
    ],
    "exclude": [
		"node_modules",
		"dist/**/*"
    ],
    "typedocOptions": {
        "includeDeclarations": true,
        "ignoreCompilerErrors": true,
        "excludeExternals": true,
        "stripInternal": true,
        "mode": "file",
        "exclude": [
            "src/types/typeguards.ts",
            "src/utils.ts",
            "src/private-exec.ts"
        ],
        "plugin": "typedoc-plugin-markdown",
        "out": "docs"
    }
}
